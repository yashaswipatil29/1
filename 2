class Publication
{
	String title;
	int copies, price;
	void saleCopy()
	{
		System.out.println("Total Sale of Publication is: "+(copies*price));
	}
}

class Book extends Publication
{
	String author;
	Book(String n, String t, int c, int p)
	{
		this.author=n;
		this.title=t;
		this.copies=c;
		this.price=p;
	}
	void author() {
		System.out.println("Author of book is :"+ this.author);

	}
	void orderCopies()
	{
		System.out.println("No of ordered book copies : "+this.copies);
	}
	void saleCopy()
	{
		int total=this.price*this.copies;
		System.out.println("Amount generated from sale of books : "+total);
	}
}
class Magazine extends Publication
{
	int orderqty,receiveissue, current_issue;
	Magazine(String t, int c, int p, int ri, int ci)
	{
		this.title=t;
		this.copies=c;
		this.price=p;
		this.receiveissue=ri;
		this.current_issue= ci;
	}
	void orderCopies()
	{
		System.out.println("No of magazines ordered : "+this.copies);
	}
	void saleCopy()
	{
		int total=this.price*this.copies;
		System.out.println("Total amount generated from sale of magazines : "+total);
	}
	void receiveissue() {
		System.out.println("NUMBER OF MAGAZINES ISSUED :"+this.receiveissue );
	}
	void current_issue()
	{
		System.out.println("Number of current issue magazines : "+this.current_issue);
	}

}
class Total
{
	public static void main(String args[])
	{
		Book b1= new Book("ABC","XYZ",2,240);
		b1.orderCopies();b1.saleCopy();b1.author();
		Magazine m=new Magazine("XYZ",10,200,15,10);
		m.orderCopies();m.saleCopy();
		m.receiveissue();
		m.current_issue();
	}
}
